<div class="post_submit_form">
<h2>Sign In</h2>
<%- flash.each do |name, msg| %>
    <%= content_tag :div, msg, :id => "error_explanation" if msg.is_a?(String)%>
<% end -%>
<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>

<%= devise_error_messages! %>
  <div class="field">
    <div>
        <%= f.label :email %>
        <span>Insert you email</span>
    </div>
   <%= f.text_field :email %>
  </div>

  <div class="field">
    <div>
        <%= f.label :password %>
        <span>Insert you password</span>
    </div>
    <%= f.password_field :password %></p>
  </div>

    <div class="actions">
        <% if devise_mapping.rememberable? -%>
            <%= f.check_box :remember_me %> <%= f.label :remember_me %>
        <% end -%>
    </div>

  <%= hidden_field_tag :next, session[:return_to] %>
  <%= hidden_field_tag :post_link, session[:post_link] %>
    <div class="actions">
        <%= f.submit "Sign in" %>
    </div>
    <div class="links">
        <%= link_to "Forgot your password?", new_password_path(resource_name) %><br />

        <%= link_to "Need an account?", new_registration_path(resource_name) %><br />
        
        <%= link_to "Resend activation email?", new_confirmation_path(resource_name) %><br />
    </div>
<% end %>
</div>

