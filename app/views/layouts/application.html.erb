<!DOCTYPE html>
<html>
<head>
  <title>MarkMyLinks</title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>
<body>

<header class="top">
    <h1>
        <a id="header" href="/">
            <span id="c1">mark</span><span id="c2">my</span><span id="c3">links<span>
        </a>
    </h1>
    <nav>
        <% if user_signed_in? %>
           <%= link_to "My Home", user_path(current_user) %>
           <%= link_to "Edit Account", edit_user_registration_path %>
           <%= link_to "Sign Out", destroy_user_session_path %>
        <% else %>
           <%= link_to "Sign In", new_user_session_path %>
           <%= link_to "Register", new_user_registration_path %>
        <% end %>
    </nav>
</header>

<div class="centerwrap">
<section>
    <%= yield %>
</section>

<footer>
Copyright 2011 &copy MarkMyLinks
</footer>

</div>
</body>
</html>
